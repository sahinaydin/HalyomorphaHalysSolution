@model IEnumerable<HalyomorphaHalys.WebApp.Models.TestImage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Hazelnut Images</strong>
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Image Name
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImageName)
                        </td>

                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.ImageId })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="card-footer">

            <p>
                @Html.ActionLink("Create New", "UploadImage")
            </p>
        </div>
    </div>
</div>