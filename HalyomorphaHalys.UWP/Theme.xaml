<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🌈 Renkler -->
    <SolidColorBrush x:Key="AccentBrush" Color="#088da5"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="Black"/>
    <SolidColorBrush x:Key="BodyTextBrush" Color="Gray"/>
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ResultRedBrush" Color="#FFD2D2"/>
    <SolidColorBrush x:Key="ResultGreenBrush" Color="#D2FFD6"/>
    <SolidColorBrush x:Key="ResultYellowBrush" Color="#FFF9C4"/>
    <SolidColorBrush x:Key="ResultBorderBrush" Color="#888"/>

    <!-- 🅰️ Başlık Stili -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource HeaderTextBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- 📝 Gövde Metni Stili -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource BodyTextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- 🔘 Accent Renkli Buton Stili -->
   
    <!-- 🔲 Kart benzeri Panel -->
    <Style x:Key="CardContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#DDDDDD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="12"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <ThemeShadow/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
