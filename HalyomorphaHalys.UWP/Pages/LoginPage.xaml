<Page
    x:Class="HalyomorphaHalys.UWP.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HalyomorphaHalys.UWP.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Border Background="White"
        Width="360"
        Padding="32"
        CornerRadius="12"
        BorderBrush="#DDD"
        BorderThickness="1"
        VerticalAlignment="Center"
        HorizontalAlignment="Center">

            <StackPanel Spacing="20">
                <TextBlock Text="INTALA LAB"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#088da5"
                           HorizontalAlignment="Center"/>

                <!-- Kullanıcı Adı -->
                <StackPanel>
                    <TextBlock Text="Kullanıcı Adı" FontWeight="SemiBold"/>
                    <TextBox x:Name="UsernameTextBox"
                             PlaceholderText="ornek@intalalab.com"
                             Width="Auto"/>
                </StackPanel>

                <!-- Şifre -->
                <StackPanel>
                    <TextBlock Text="Şifre" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="PasswordBox"
                                 PlaceholderText="Şifrenizi girin"
                                 Width="Auto"/>
                </StackPanel>

                <!-- Hata Mesajı -->
                <TextBlock x:Name="ErrorTextBlock"
                           Foreground="Red"
                           FontSize="14"
                           Text=""
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>

                <!-- Giriş Butonu -->
                <Button Content="Giriş Yap"
                        Click="LoginButton_Click"
                        Background="#088da5"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="40"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
